{
	"name": "lingoquest",
	"version": "1.0.0",
	"description": "Interactive language learning through quests and challenges",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"dev": "vite dev",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^0.0.17",
		"@sveltejs/kit": "^0.0.30",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"typescript": "^5.0.0",
		"vite": "^6.3.5"
	},
	"dependencies": {
		"lucide-svelte": "^0.294.0"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"language-learning",
		"education",
		"pwa",
		"svelte",
		"sveltekit",
		"gamification"
	],
	"author": "LingoQuest Team",
	"license": "MIT"
}
