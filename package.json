{
	"name": "lingoquest",
	"version": "1.0.0",
	"description": "Interactive language learning through quests and challenges",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"dev": "vite dev",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
               "@sveltejs/adapter-static": "^3.0.8",
               "@sveltejs/kit": "^2.21.4",
               "@sveltejs/vite-plugin-svelte": "^5.1.0",
               "prettier": "^3.5.3",
               "prettier-plugin-svelte": "^3.4.0",
               "svelte": "^5.33.19",
               "svelte-check": "^4.2.1",
               "typescript": "^5.8.3",
               "vite": "^6.3.5"
	},
	"dependencies": {
               "lucide-svelte": "^0.514.0"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"language-learning",
		"education",
		"pwa",
		"svelte",
		"sveltekit",
		"gamification"
	],
	"author": "LingoQuest Team",
	"license": "MIT"
}
